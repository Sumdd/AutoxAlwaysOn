<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <!-- log4 日志 -->
  <log4net>
    <!-- 文件 -->
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender, log4net">
      <param name="LockingModel" type="log4net.Appender.FileAppender+MinimalLock" />
      <param name="File" value="Log/" />
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value="yyyy-MM-dd.'log'" />
      <param name="AppendToFile" value="true" />
      <param name="MaxSizeRollBackups" value="-1" />
      <param name="MaximumFileSize" value="512MB" />
      <param name="RollingStyle" value="Composite" />
      <param name="preserveLogFileNameExtension" value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <!--<param name="ConversionPattern" value="%d [%t-5p] %-5p - %m%n" />-->
        <param name="ConversionPattern" value="%d %-5p %m%n" />
      </layout>
    </appender>
    <!-- 控制台 -->
    <appender name="RollingLogConsoleAppender" type="log4net.Appender.ColoredConsoleAppender, log4net">
      <mapping>
        <level value="DEBUG" />
        <foreColor value="White, HighIntensity" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="Green, HighIntensity" />
      </mapping>
      <mapping>
        <level value="WARN" />
        <foreColor value="Yellow, HighIntensity" />
      </mapping>
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red, HighIntensity" />
      </mapping>
      <mapping>
        <level value="FATAL" />
        <foreColor value="Purple, HighIntensity" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout,log4net">
        <!--<param name="ConversionPattern" value="%d [%-5t] %-5p - %m%n" />-->
        <param name="ConversionPattern" value="%d %-5p %m%n" />
      </layout>
    </appender>
    <root>
      <!--控制级别，由低到高: ALL|DEBUG|INFO|WARN|ERROR|FATAL|OFF-->
      <!--比如定义级别为INFO，则INFO级别向下的级别，比如DEBUG日志将不会被记录-->
      <!--如果没有定义LEVEL的值，则缺省为DEBUG-->
      <level value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
      <!--<appender-ref ref="RollingLogConsoleAppender" />-->
    </root>
  </log4net>

  <!-- 配置 -->
  <appSettings>
    <!-- 同步频率,小于等于最小任何项的最小频率秒数 -->
    <add key="m_uSeconds" value="15" />
    <!-- 激活网站,前缀HTTP,编号不可重复 -->
    <add key="HTTP1" value="http://localhost:6861/Home/BT_1REQ" />
    <!-- 激活网站频率秒,前缀RATESECHTTP,编号不可重复 -->
    <add key="RATESECHTTP1" value="60" />
    <!-- 激活网站GET所需参数,前缀ARGSHTTP,编号不可重复 -->
    <add key="ARGSHTTP1" value="" />
  </appSettings>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>